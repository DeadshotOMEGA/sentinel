# Database (using existing Docker Desktop container)
DATABASE_URL=postgresql://sentinel:sentinel@localhost:5432/sentinel

# Redis (using existing Docker Desktop container)
REDIS_URL=redis://localhost:6379

# Auth Secrets (generate with: openssl rand -base64 32)
JWT_SECRET=your-jwt-secret-min-32-chars
API_KEY_SECRET=your-api-key-secret-min-32-chars

# Server
NODE_ENV=development
PORT=3000
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug

# Feature Flags (optional)
ENABLE_RATE_LIMITING=false

# Swagger UI Configuration (optional)
# false (default) = Public access, no auth required
# 'basic' = HTTP Basic authentication
# 'session' = Requires valid user session
# 'disabled' = Swagger UI disabled (returns 404)
ENABLE_SWAGGER_AUTH=false
SWAGGER_USERNAME=admin
SWAGGER_PASSWORD=changeme

# Monitoring Stack (optional - requires --profile monitoring)
# Generate strong password: openssl rand -base64 32
GRAFANA_ADMIN_PASSWORD=changeme

# Log Retention (Loki)
# 720h = 30 days (production-ready)
# 168h = 7 days (development)
LOKI_RETENTION_PERIOD=720h

# Metrics Retention (Prometheus)
# 15d = 15 days (default)
# Adjust based on storage capacity and requirements
PROMETHEUS_RETENTION=15d

# Frontend Help System (Wiki.js integration)
NEXT_PUBLIC_WIKI_BASE_URL=http://localhost:3002
NEXT_PUBLIC_HELP_FALLBACK_MODE=hybrid
NEXT_PUBLIC_HELP_PREVIEW_ENABLED=false
NEXT_PUBLIC_HELP_DOCS_VERSION=latest
