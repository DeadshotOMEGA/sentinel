    "prisma:migrate:deploy:safe": "tsx scripts/migrate-deploy-safe.ts",
    "prisma:baseline": "tsx scripts/baseline-prisma-migrations.ts",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset",
    "typecheck": "tsc --noEmit",
    "migrate:member-types": "tsx scripts/migrate-member-types.ts"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@prisma/client-runtime-utils": "^7.3.0",
    "pg": "^8.17.2"
  },
  "devDependencies": {
    "@types/pg": "^8.16.0",
    "dotenv": "^17.2.3",
    "prisma": "^7.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
