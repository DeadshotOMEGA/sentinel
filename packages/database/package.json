{
  "name": "@sentinel/database",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "description": "Database schema and client for Sentinel",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "scripts": {
    "build": "tsc && cp -r generated dist/",
    "prisma:generate": "prisma generate",
