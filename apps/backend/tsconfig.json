{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "declaration": false,
    "declarationMap": false,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "@sentinel/contracts": ["../../packages/contracts/src"],
      "@sentinel/database": ["../../packages/database/src"],
      "@sentinel/types": ["../../packages/types/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "coverage", "tests"]
}
