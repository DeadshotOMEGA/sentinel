{
  "name": "@sentinel/backend",
  "version": "2.0.0",
  "private": true,
  "description": "Backend API for Sentinel RFID Attendance System",
  "main": "./src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "openapi": "tsx src/generate-openapi.ts"
  },
  "dependencies": {
    "@sentinel/contracts": "workspace:*",
    "@sentinel/database": "workspace:*",
    "@sentinel/types": "workspace:*",
    "@ts-rest/core": "3.53.0-rc.1",
    "@ts-rest/express": "3.53.0-rc.1",
    "@ts-rest/open-api": "3.53.0-rc.1",
    "bcryptjs": "^3.0.3",
    "better-auth": "^1.4.17",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.22.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "papaparse": "^5.5.3",
    "redoc-express": "^2.1.3",
    "socket.io": "^4.8.3",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "valibot": "^1.2.0",
    "winston": "^3.19.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@testcontainers/postgresql": "^11.11.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/papaparse": "^5.5.2",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@vitest/coverage-v8": "^4.0.17",
    "fast-check": "^4.5.3",
    "pg": "^8.17.2",
    "supertest": "^7.2.2",
    "testcontainers": "^11.11.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}
