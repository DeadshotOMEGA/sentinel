{
  "name": "@sentinel/backend",
  "version": "2.0.0",
  "private": true,
  "description": "Backend API for Sentinel RFID Attendance System",
  "main": "./src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix"
  },
  "dependencies": {
    "@sentinel/contracts": "workspace:*",
    "@sentinel/database": "workspace:*",
    "@sentinel/types": "workspace:*",
    "@ts-rest/core": "^3.45.0",
    "@ts-rest/express": "^3.45.0",
    "better-auth": "^1.0.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^7.1.0",
    "papaparse": "^5.5.3",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.1",
    "valibot": "^0.30.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@testcontainers/postgresql": "^10.0.0",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/papaparse": "^5.5.0",
    "@types/supertest": "^6.0.0",
    "@types/uuid": "^9.0.7",
    "@vitest/coverage-v8": "^1.0.0",
    "fast-check": "^3.15.0",
    "pg": "^8.17.1",
    "supertest": "^6.3.0",
    "testcontainers": "^10.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
