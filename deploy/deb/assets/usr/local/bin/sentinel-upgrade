#!/usr/bin/env bash
set -euo pipefail

DEPLOY_DIR="/opt/sentinel/deploy"
LAUNCHER="${DEPLOY_DIR}/upgrade-launcher.sh"

if [[ ! -x "${LAUNCHER}" ]]; then
  echo "Sentinel upgrade launcher not found: ${LAUNCHER}" >&2
  echo "Reinstall sentinel package." >&2
  exit 1
fi

set +e
"${LAUNCHER}" "$@"
exit_code=$?
set -e
exit "${exit_code}"
