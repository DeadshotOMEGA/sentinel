#!/usr/bin/env bash
set -euo pipefail

DEPLOY_DIR="/opt/sentinel/deploy"
LAUNCHER="${DEPLOY_DIR}/install-launcher.sh"

if [[ ! -x "${LAUNCHER}" ]]; then
  echo "Sentinel install launcher not found: ${LAUNCHER}" >&2
  echo "Reinstall sentinel-appliance-tools package." >&2
  exit 1
fi

exec "${LAUNCHER}"
