# Required: explicit release version (must be a SemVer tag like v1.2.3)
SENTINEL_VERSION=v1.0.0

# GHCR org/user
GHCR_OWNER=deadshotomega

# Public app URL used by backend auth/cors defaults
APP_PUBLIC_URL=http://sentinel.local
# Public HTTP bind port for Caddy (v1 default: 80)
APP_HTTP_PORT=80
# If you browse by IP, include that IP origin as well (example: http://192.168.1.50)
CORS_ORIGIN=http://sentinel.local,http://localhost,http://127.0.0.1

# Backend/Next runtime wiring
BACKEND_INTERNAL_URL=http://backend:3000
NEXT_PUBLIC_API_URL=
NEXT_PUBLIC_WS_URL=

# Database
POSTGRES_USER=sentinel
POSTGRES_PASSWORD=change-this-db-password
POSTGRES_DB=sentinel

# Security secrets (generate with: openssl rand -base64 32)
JWT_SECRET=change-this-jwt-secret
API_KEY_SECRET=change-this-api-key-secret
SESSION_SECRET=change-this-session-secret
SOCKET_IO_SECRET=change-this-socketio-secret

# Backend runtime settings
LOG_LEVEL=info
ENABLE_RATE_LIMITING=true
ENABLE_SWAGGER_AUTH=false
SWAGGER_USERNAME=admin
SWAGGER_PASSWORD=changeme
TIMEZONE=America/Winnipeg
DAY_ROLLOVER_TIME=03:00
DUTY_WATCH_ALERT_TIME=19:00
LOCKUP_WARNING_TIME=22:00
LOCKUP_CRITICAL_TIME=23:00
SENTINEL_AUTO_SEED_ENUMS=true
SENTINEL_AUTO_SEED_ATTEMPTS=3
SENTINEL_AUTO_SEED_RETRY_DELAY_MS=3000

# Optional LAN enforcement override (auto-detected by installer if empty)
LAN_CIDR=

# Optional observability defaults
PROMETHEUS_RETENTION=7d
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-this-grafana-password
# Used only with --allow-grafana-lan; host port mapping defaults to 3002->3000
GRAFANA_LAN_PORT=3002
GRAFANA_ROOT_URL=http://localhost:3002

# NetBird (self-hosted) defaults
NETBIRD_DOMAIN=netbird.local
NETBIRD_PROTOCOL=http
NETBIRD_HTTP_PORT=80
NETBIRD_AUTH_SECRET=change-this-netbird-auth-secret
NETBIRD_ENCRYPTION_KEY=change-this-netbird-encryption-key
